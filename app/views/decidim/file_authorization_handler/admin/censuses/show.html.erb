
<div class="card">
  <div class="card-divider">
    <h2 class="item_show__header-title">
      <%= t("admin.show.title", scope: "decidim.file_authorization_handler") %>
    </h2>
  </div>
  <div class="card-section">
    <% if @status.count > 0 %>
      <p class="p-2"><%= t("decidim.file_authorization_handler.admin.show.data", count: @status.count,
        due_date: l(@status.last_import_at, format: :long)) %>
      </p>
      <div class="p-2">
        <%= link_to t("decidim.file_authorization_handler.admin.destroy.title"),
          censuses_path,
          method: :delete,
          class: "p-2 button button__md button__primary",
          data: { confirm: t("decidim.file_authorization_handler.admin.destroy.confirm") } %>
      </div>
      <% else %>
        <p class="p-2"><%= t("admin.show.empty", scope: "decidim.file_authorization_handler") %></p>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-divider">
    <h2 class="item_show__header-title">
      <%= t("admin.new.title", scope: "decidim.file_authorization_handler") %>
    </h2>
  </div>
  <div class="card-section">
    <p class="p-2"><%= t("decidim.file_authorization_handler.admin.new.info") %></p>
    <%= form_tag censuses_path, multipart: true, class: "form" do %>
      <ul>
      <li class="p-2 sidebar-menu__item card-title"><%= label_tag :name, t("admin.new.file", scope: "decidim.file_authorization_handler") %></li>
      <li class="p-2 sidebar-menu__item"><%= file_field_tag :file %></li>
      <li class="p-2 sidebar-menu__item"><%= submit_tag t("admin.new.submit", scope: "decidim.file_authorization_handler"), class: "button button__sm button__secondary expanded small" %></li>
      </ul>
    <% end %>
  </div>
</div>
